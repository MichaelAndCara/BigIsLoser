@model IEnumerable<BigISLoser.Models.WeightCheckInModel>

@{
    ViewBag.Title = "WeightCheckIn";
}

<h2>WeightCheckIn</h2>

<p>
    @Html.ActionLink("Check In", "CheckIn")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Weight
        </th>
        <th>
            CheckInDate
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CheckInId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CheckInId })
        </td>
        @*<td>
            @item.UserId
        </td>*@
        <td>
            @item.Weight
        </td>
        <td>
            @String.Format("{0:MM/dd/yyyy}", item.CheckInDate)
        </td>
    </tr>
}

</table>

