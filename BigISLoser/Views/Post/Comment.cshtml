@model BigISLoser.Models.CommentModel

@{
    ViewBag.Title = "Comment";
}

<h2>Comment</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    
        <div>
            @Html.LabelFor(model => model.OriginalPost) : @Model.OriginalPost
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.CommentContent)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.CommentContent, new { @cols = 80 })
            @Html.ValidationMessageFor(model => model.CommentContent)
        </div>
        @Html.HiddenFor(model => model.PostId)
        @Html.HiddenFor(model => model.UserId)
                                             
        <p>
            <input type="submit" value="Comment" />
        </p>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

